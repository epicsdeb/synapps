record(stringout,"$(P)$(H)$(SIG)_Signal") {
	field(DTYP,"softGlue")
	field(OUT,"@asynMask($(PORT),$(ADDR),0x2f)")
}
record(mbbo,"$(P)$(H)$(SIG)_Show") {
	field(FLNK,"$(P)$(H)$(SIG)_DoShow")
	field(ZRVL,"1")
	field(ONVL,"2")
	field(ZRST,"0")
	field(ONST,"1")
}
record(sseq,"$(P)$(H)$(SIG)_DoShow") {
	field(SELM,"Specified")
	field(SELL,"$(P)$(H)$(SIG)_Show.RVAL")
	field(STR1,"")
	field(DOL1,"$(P)$(H)NullSigName")
	field(LNK1,"$(P)$(H)SignalToShow PP")
	field(DOL2,"$(P)$(H)$(SIG)_Signal")
	field(LNK2,"$(P)$(H)SignalToShow PP")
}
record(scalcout,"$(P)$(H)$(SIG)_SigShow") {
	field(INAA,"$(P)$(H)$(SIG)_Signal CP")
	field(INBB,"$(P)$(H)SignalToShow CP")
	field(INPA,"$(P)$(H)SignalBlink CP")
	field(CALC,"aa==bb?(a?'1':'0'):'0'")
}
record(bi,"$(P)$(H)$(SIG)_BI") {
	field(DTYP,"asynUInt32Digital")
	field(INP,"@asynMask($(PORT),$(ADDR),0x10)")
	field(ZNAM,"0")
	field(ONAM,"1")
}
record(scalcout,"$(P)$(H)$(SIG)_autoRead") {
	field(INAA,"$(P)$(H)$(SIG)_Signal CP")
	field(INBB,"$(P)$(H)ReadRateON.SCAN CP")
	field(INCC,"$(P)$(H)ReadRateOFF.SCAN CP")
	field(DD,"Passive")
	field(CALC,"aa==''?(cc==''?dd:cc):(bb==''?dd:bb)")
	field(OUT,"$(P)$(H)$(SIG)_BI.SCAN CA")
}
