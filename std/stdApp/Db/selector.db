	field(DO4,	"$(VAL4=0)")
	field(LNK4, "$(PV4='') CA NMS")
	field(WAIT4, "Wait")
	field(DO5,	"$(VAL5=0)")
	field(LNK5, "$(PV5='') CA NMS")
	field(WAIT5, "Wait")
	field(DO6,	"$(VAL6=0)")
	field(LNK6, "$(PV6='') CA NMS")
	field(WAIT6, "Wait")
