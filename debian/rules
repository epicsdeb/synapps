#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

#Architecture
build: build-arch build-indep

EPICS_HOST_ARCH:=$(shell /usr/epics/base/startup/EpicsHostArch)

RTEMS_TARGETS=RTEMS-mvme2100 RTEMS-mvme3100 RTEMS-mvme5500
DEBUG_TAGETS=$(EPICS_HOST_ARCH)-debug
TARGETS+=$(DEBUG_TAGETS) $(RTEMS_TARGETS)

MFLAGS += EXTRA_ENV=USE_RPATH USE_RPATH=NO CROSS_COMPILER_TARGET_ARCHS="\"$(TARGETS)\""


build-arch: build-arch-stamp
build-arch-stamp: build-edl $(all-all)

	# Add here commands to compile the arch part of the package.
	cd support && EPICS_HOST_ARCH=$(EPICS_HOST_ARCH) $(MAKE) -f new.make $(MFLAGS) all
	cd support && EPICS_HOST_ARCH=$(EPICS_HOST_ARCH) $(MAKE) -f new.make $(MFLAGS) INSTALL_LOCATION=$$PWD/inst all
	ln -s support/inst inst

	# remove unneeded testing stuff
	rm -f inst/bin/*/*test*
	rm -f inst/bin/*/*demo*
	rm -f inst/lib/*/*test*
	rm -f inst/lib/*/*Test*
	rm -f inst/lib/*/*demo*
	rm -f inst/dbd/*test*
	rm -f inst/dbd/*Test*
	rm -f inst/dbd/*demo*

	# We will fetch these ourselves
	# since many are not install anyway
	rm -rf inst/db

	touch $@

ADL=$(wildcard support/all_adl/*.adl)
EDL=$(ADL:support/all_adl/%.adl=support/edl/%.edl)

build-edl: build-edl-pre $(EDL)

build-edl-pre:
	rm -f support/edlskip

$(EDL): \
support/edl/%.edl: support/all_adl/%.adl
	test -d support/edl || install -d support/edl
	if adl2edl -rename -rgb $< > $@.tmp; then mv $@.tmp $@; \
else rm $@.tmp; echo "Failed to convert $@" >> support/edlskip;\
fi

build-indep: build-indep-stamp
build-indep-stamp:

	# Add here commands to compile the indep part of the package.
	#$(MAKE) doc
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-arch-stamp build-indep-stamp
	cd support && EPICS_HOST_ARCH=$(EPICS_HOST_ARCH) $(MAKE) $(MFLAGS) -f new.make clean
	rm -rf inst support/inst

	dh_clean 

install: install-indep install-arch
install-indep:
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_installdirs -i

	install -d debian/epics-synapps-doc/usr/share/doc/epics-synapps/
	install -m 644 -t debian/epics-synapps-doc/usr/share/doc/epics-synapps/ support/README support/LICENSE

	install -d debian/edm-synapps/usr/epics/base/op/edl
	install -m 644 -t debian/edm-synapps/usr/epics/base/op/edl support/edl/*.edl

	install -m 644 support/edlskip debian/epics-synapps-doc/usr/share/doc/epics-synapps/

	dh_install -i

install-arch-pre:
	dh_testdir
	dh_testroot
	dh_clean -k -s 
	dh_installdirs -s

devdir=debian/epics-synapps-dev/usr

basedir=$(devdir)/epics/base
hostbin=$(basedir)/bin/$(EPICS_HOST_ARCH)
hostlib=$(basedir)/lib/$(EPICS_HOST_ARCH)

install-arch-host:
	install -d $(devdir)/bin
	install -d $(devdir)/lib

	install -d $(hostbin)
	install -d $(hostlib)
	install -d $(basedir)/include
	install -d $(basedir)/db
	install -d $(basedir)/dbd
	install -d $(basedir)/as/req

	install -d $(basedir)/configure/rules.d

	# find all .db files
	find support -name '*.db' -exec install -m 644 {} $(basedir)/db/ \;

	# find all autosave request files
	find support -name '*.req' -exec install -m 644 {} $(basedir)/as/req/ \;

	install -m 644 support/seq/*/configure/RULES_BUILD \
$(basedir)/configure/rules.d/seqsnc.make

	# Location of 'snc' executable changes

	# remove old defintion of SNC=
	sed -i -e '/^# snc executable/,/#----/d' \
$(basedir)/configure/rules.d/seqsnc.make
	# append new defintion
	echo 'SNC = $$(call PATH_FILTER, $$(TOOLS)/snc$$(HOSTEXE))' >> \
$(basedir)/configure/rules.d/seqsnc.make

	# Executables for /usr/epics/base/bin/host-arch/
	install -m 755 -t $(hostbin) \
inst/bin/$(EPICS_HOST_ARCH)/*
	# Executables for /usr/bin
	install -m 755 -t $(devdir)/bin \
inst/bin/$(EPICS_HOST_ARCH)/snc
	# symlink
	rm -f $(hostbin)/snc
	ln -s ../../../../bin/snc $(hostbin)/snc

	# Static libraries
	install -m 644 -t $(hostlib) \
inst/lib/$(EPICS_HOST_ARCH)/*.a

	# Shared libraries (/usr/lib)
	install -m 644 -t $(devdir)/lib \
inst/lib/$(EPICS_HOST_ARCH)/*.so.*

	# copy broken symlinks
	install -m 644 -t $(hostlib) \
inst/lib/$(EPICS_HOST_ARCH)/*.so

	# fix symlinks for compileing
	# link /usr/epics/base/lib/host-arch/*.so to /usr/lib/*.so.*
	$(MAKE) -f $(CURDIR)/debian/rules -C $(hostlib) install-arch-host-lib

	# headers
	install -m 644 -t $(basedir)/include \
inst/include/*

	# database definitions
	install -m 644 -t $(basedir)/dbd \
inst/dbd/*

	# host -debug
	install -d $(basedir)/bin
	cp -r inst/bin/$(EPICS_HOST_ARCH)-debug $(basedir)/bin/

	install -d $(basedir)/lib
	cp -r inst/lib/$(EPICS_HOST_ARCH)-debug $(basedir)/lib/

# in $(hostlib)
install-arch-host-lib:
	for ff in *.so; do \
rm -f $$ff; \
ln -s ../../../../lib/$$ff.* $$ff; \
done

# $(1) is target name (ie RTEMS-mvme3100)
define rule-install-rtems

$(1)-pkg = epics-synapps-$(1:RTEMS-%=%)

install-arch-$(1):
# TODO: uncomment when building loadable objects
# 	if [ -d inst/bin/$(1) ]; then \
# 	install -d debian/$$($(1)-pkg)/usr/epics/base/bin; \
# 	cp -r inst/bin/$(1) debian/$$($(1)-pkg)/usr/epics/base/bin/; \
# 	fi
	if [ -d inst/lib/$(1) ]; then \
	install -d debian/$$($(1)-pkg)/usr/epics/base/lib; \
	cp -r inst/lib/$(1) debian/$$($(1)-pkg)/usr/epics/base/lib/; \
	fi

install-arch-targets += install-arch-$(1)

endef

$(foreach targ,$(RTEMS_TARGETS),$(eval $(call rule-install-rtems,$(targ))))

install-arch-post:
	dh_install -s

install-arch: install-arch-pre install-arch-host $(install-arch-targets) install-arch-post

# Must not depend on anything. This is to be called by
# binary-arch/binary-indep
# in another 'make' thread.
binary-common:
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate	
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip -Xrtems -XRTEMS -Xdebug
	dh_compress
	dh_fixperms
#	dh_perl
	dh_makeshlibs
	dh_installdeb
	LD_LIBRARY_PATH=$$LD_LIBRARY_PATH:$(CURDIR)/inst dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb
# Build architecture independant packages using the common target.
binary-indep: build-indep install-indep
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

# Build architecture dependant packages using the common target.
binary-arch: build-arch install-arch
	$(MAKE) -f debian/rules DH_OPTIONS=-s binary-common

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch
